<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:weather.ViewModels;assembly=weather"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:views="clr-namespace:weather.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="weather.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="weather">

	<StackPanel >
        <TextBox />
        <Button> Enter Zipcode </Button>
        <!-- Today's forecast text (and inage?) -->
		<views:forecast/>
        <!-- Carousel for 7 day forecast -->
        <Carousel>
			<views:forecast/>
		</Carousel>
        
        
    </StackPanel>


</Window>
